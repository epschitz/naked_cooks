  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this category from being saved:</h2>
      <ul>
      <% @recipe.errors.full_messages.each do |msg| %>
